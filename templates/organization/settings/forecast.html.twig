{% extends 'organization/base.html.twig' %}

{% block title %}Public Forecast settings | {{ parent() }}{% endblock %}

{% block content %}
    {{ include('organization/settings/_menu.html.twig', {menu: 'forecast'}) }}
    <div class="card border-top-0">
        {{ form_start(form) }}
            <div class="card-body">
                {{ form_errors(form) }}
                {{ form_row(form.allowNonAdmins) }}
            </div>
            <div class="card-footer text-right">
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
