{% extends 'organization/base.html.twig' %}

{% block title %}Delete public forecast "{{ publicForecast.name }}" | {{ parent() }}{% endblock %}

{% block content %}
    <div class="card card-body">
        <h2>Delete the public forecast "{{ publicForecast.name }}"</h2>

        <p>Are you sure that you want to delete this public forecast?</p>

        {{ form_start(form) }}
            <div class="text-right">
                <a href="{{ organization_path('public_forecasts_list')}}" class="btn btn-default">Cancel</a>
                {{ form_widget(form.submit) }}
            </div>
            {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
